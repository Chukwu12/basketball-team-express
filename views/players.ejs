<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NBA Players</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100 text-gray-900 font-sans">

<section class="flex min-h-screen">
  <!-- Sidebar -->
<%- include("partials/sidebar") %>
<div class="ml-64 p-6">
  <h1 class="text-3xl font-bold mb-6">NBA Players</h1>

  <!-- Search Form -->
  <form action="/players" method="get" class="mb-6 flex gap-2">
    <input type="text" name="search" placeholder="Search players..." 
      class="flex-1 border rounded px-3 py-2" value="<%= search || '' %>">
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
      Search
    </button>
  </form>

  <!-- Players Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% players.forEach(player => { %>
      <a href="/players/<%= player.id %>" 
         class="block border rounded p-4 hover:shadow-lg hover:bg-gray-50 transition">
        <h2 class="font-bold text-lg"><%= player.first_name %> <%= player.last_name %></h2>
        <p class="text-gray-600">Position: <%= player.position || 'N/A' %></p>
        <p class="text-gray-600">Team: <%= player.team?.full_name || 'N/A' %></p>
      </a>
    <% }) %>
  </div>
</div>



</section>

<script>
  // Animate page load like the YouTube video
  gsap.to("#players-page h1", { opacity: 1, y: -20, duration: 1 });
  gsap.to("form", { opacity: 1, y: -10, duration: 1, delay: 0.5 });

  // Animate player card result
  gsap.to(".player-card", { opacity: 1, y: -10, duration: 1, delay: 1 });
</script>

</body>
</html>
