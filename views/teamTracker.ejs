<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>NBA Team Tracker</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body class="bg-gray-100 min-h-screen">
  <div class="flex">
    <%- include('partials/sidebar') %>

    <main class="ml-64 flex-1 p-8">

      <!-- Search Section -->
      <section id="teamtracker" class="min-h-screen flex items-center justify-center bg-cover bg-center" style="background-image: url('/img/basketball-img.jpg')">
        <div class="form-box max-w-xl w-full bg-white/30 backdrop-blur-lg p-10 rounded-xl shadow-2xl text-center">
          
          <h1 class="text-4xl font-extrabold text-blue-900 mb-6 tracking-tight">
            Basketball Team Tracker <i class="fa-solid fa-basketball fa-bounce text-orange-500"></i>
          </h1>

          <!-- Search Form -->
          <form action="/findTeams" method="POST" class="flex flex-col md:flex-row gap-4 justify-center mb-6">
            <input type="text" name="teamName" placeholder="Enter Team Name..." class="flex-1 p-3 rounded-md border focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-800" required>
            <button type="submit" class="bg-blue-600 text-white px-5 py-3 rounded-md hover:bg-blue-700 transition font-semibold">
              Search
            </button>
          </form>

          <!-- Error Message -->
          <% if (error) { %>
            <div class="bg-red-100 border border-red-300 text-red-700 p-4 rounded mb-4 shadow">
              <%= error %>
            </div>
          <% } %>

          <!-- Team Info Display -->
          <% if (info) { %>
            <div class="bg-white/90 text-gray-900 rounded-xl p-6 text-left shadow-lg max-w-2xl mx-auto">
              
              <h2 class="text-3xl font-bold text-blue-800 mb-4"><%= info.full_name %></h2>

              <!-- API Info -->
              <div class="mb-4 space-y-1">
                <p><i class="fa-solid fa-location-dot text-blue-500 mr-2"></i><strong>City:</strong> <%= info.city %></p>
                <p><i class="fa-solid fa-rectangle-list text-blue-500 mr-2"></i><strong>Abbreviation:</strong> <%= info.abbreviation %></p>
                <p><i class="fa-solid fa-people-group text-blue-500 mr-2"></i><strong>Conference:</strong> <%= info.conference %></p>
                <p><i class="fa-solid fa-layer-group text-blue-500 mr-2"></i><strong>Division:</strong> <%= info.division %></p>
              </div>

              <!-- Divider -->
              <hr class="my-4 border-gray-300">

              <!-- Extra Stats -->
              <% if (info.championships !== undefined) { %>
                <h3 class="text-xl font-semibold text-blue-700 mb-2">üèÜ Extra Stats</h3>
                <ul class="list-disc pl-6 space-y-1">
                  <li><strong>Championships:</strong> <%= info.championships %></li>
                  <li><strong>Most 3s:</strong> <%= info['Most 3s'] %></li>
                  <li><strong>Best Record:</strong> <%= info['best Record'] %></li>
                </ul>
              <% } else { %>
                <p class="text-sm text-gray-500 italic">No additional stats available.</p>
              <% } %>

              <a href="/team-tracker" class="mt-6 inline-block text-blue-600 hover:underline text-sm">
                ‚Üê Search another team
              </a>
            </div>
          <% } %>
        </div>
      </section>
    </main>
  </div>
</body>
</html>
